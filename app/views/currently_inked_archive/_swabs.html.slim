div class="row"
  - collection.each_with_index do |ci, index|
    div class="col-sm-12 col-md-6"
      div class="entry"
        div
          div.swab style="--swab-color:#{ci.ink_color};"
        div
          b
            'Pen:
          = ci.pen_name
        div
          b
            'Ink:
          = ci.ink_short_name
          | &nbsp;
          - if ci.macro_cluster
            = link_to fa_icon("external-link"), ink_path(ci.macro_cluster)
        div
          b
            'Date inked:
          = ci.inked_on
        - if ci.comment.present?
          div= ci.comment
        div style="clear:left;"
        div class="actions"= render partial: "actions", locals: { ci: ci }
    - if (index+1) % 2 == 0
      div class="clearfix visible-sm-block"

div class="links row"
  div class="col-sm-12"
    = paginate @collection
