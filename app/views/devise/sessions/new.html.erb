<h1 class="mb-5">Log in</h1>

<div class="fpc-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.input :email, required: false, autofocus: true %>
    </div>
    <div class="mb-4">
      <%= f.input :password, required: false, hint: "Leave blank to receive a magic logic link to the email address provided" %>
    </div>
    <div class="mb-3">
      <%= f.input :remember_me, as: :boolean, :input_html => { :checked => true } if devise_mapping.rememberable? %>
    </div>

    <div>
      <%= f.button :submit, "Log in", class: "btn-success" %>
    </div>
  <% end %>
</div>

<h2 class="mt-5 mb-3">Having trouble?</h2>
<%= render "devise/shared/links" %>
